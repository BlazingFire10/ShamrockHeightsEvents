<h1>Add an Event</h1>

<form method="post">
    <label>Name of Event</label>
    <input asp-for="Title" />
    <br />
    <label>Event Description</label>
    <textarea asp-for="Description" rows="5" cols="30"></textarea>
    <br />
    <label>Location of Event</label>
    <input asp-for="Location" />
    <br />
    <label>URL of a Picture Representing the Event</label>
    <input asp-for="ImageUrl" />
    <br />
    <label>Year </label>
    <input asp-for="Year" />
    <label>Month </label>
    <input asp-for="Month" />
    <label>Day </label>
    <input asp-for="Day" />
    <label>Time </label>
    <input asp-for="Time" />

    <input type="submit" />
</form>